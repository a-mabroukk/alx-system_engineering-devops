#!/usr/bin/env bash
# Ensure Nginx is running
sudo start nginx
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default
#Update the Nginx configuration to serve the content on the new port
sed sed -i "s/8080/80/g" /etc/nginx/sites-available/default
# Enable new server block
sudo ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default
#restart Nginx after updating the configuration
service nginx restart
